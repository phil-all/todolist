{% extends 'base.html.twig' %}

{% block header_title %}
	<h1>Modifier
		{{ task.title }}
	</h1>
{% endblock %}

{% block body %}
	<div class="row">
		{{ form_start(form, {'action' : path('task_edit', { 'id' : task.id })}) }}
		{{ form_widget(form) }}
		<br/>
		<button type="submit" class="btn btn-success pull-right">Modifier</button>
		{{ form_end(form) }}
	</div>
{% endblock %}
