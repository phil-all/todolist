{% extends 'base.html.twig' %}

{% block header_title %}
	<h1>Créer une nouvelle tâche</h1>
{% endblock %}

{% block body %}
	<div class="row">
		<div class="container">
			<a href="{{ path('task_list_done') }}" class="btn btn-success">Consulter la liste des taches faites</a>
			<a href="{{ path('task_list_todo') }}" class="btn btn-warning pull-right">Consulter la liste des taches non terminées</a>
		</div>
	</div>
	<br/>
	<div class="row container">
		{{ form_start(form, {'action' : path('task_create')}) }}
		{{ form_widget(form) }}
		<br/>
		<button type="submit" class="btn btn-success pull-right">Ajouter</button>
		{{ form_end(form) }}

		{# <a href="{{ path('task_list_done') }}" class="btn btn-primary">Retour à la liste des tâches</a> #}
	</div>
{% endblock %}
